package java_assignments;

public class Assign_2 {
	
public static void main(String[] args) {
	
	 int arr[]= {2,4,6,8};
	 
	 System.out.println(avrg(arr));
}	
    
    public static int avrg(int[] arr) {
       

        int sum =0;
        int avg = 0;

        for (int i=0;i<arr.length;i++) {
        	sum+=sum+arr[i];
        }
        avg = sum/arr.length;
        System.out.println(sum);
        return avg;

    }
    
}
